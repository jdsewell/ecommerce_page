<div class="container-fluid">
<div class="row">
<div class="col-xs-3 contents">
<p><a href="#" class="nav-content">Top</a></p>
<% @categories.each do |category| %>
	<!-- prevents empty categories from being displayed -->
	<% if category.products.empty? == false %>
	<p><a href="#<%= category.name.gsub(' ','') %>" class="nav-content"><%= category.name %></a></p>
	<% end %>
<% end %>
</div>
<div class="col-xs-3"></div>
<div class="col-xs-9">
<h1>Categories</h1>
<% @categories.each do |category| %>
	<% if category.products.empty? == false %>
	<div id="<%= category.name.gsub(' ','') %>"></div>
	<br>
	<h3 class="category-name"><%= category.name %></h3>
	<% category.products.each do |product| %>
		<div class="well">
        	<% if product.image.url.nil? == false %>
         		<p><%= image_tag product.image.url, size: 100 %></p>
        	<% end %>
        	<h3><%= link_to product.name, product, target: "_blank" %></h3>
        	<p><%= number_to_currency product.price %></p>
      	</div>
	<% end %>
	<% end %>
<% end %>
</div>
</div>
</div>