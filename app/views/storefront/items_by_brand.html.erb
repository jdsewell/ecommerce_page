<div class="container-fluid">
<div class="row">
<div class="col-xs-2 contents">
<p><a href="#" class="nav-content"><strong>Top</strong></a></p>
<% @brands.each do |brand| %>
	<p><a href="#<%= brand.gsub(' ','') %>" class="nav-content"><%= brand %></a></p>
<% end %>
</div>
<div class="col-xs-3"></div>
<div class="col-xs-9">
<h1>Brands</h1>
<% @brands.each do |brand| %>
	<div id="<%= brand.gsub(' ','') %>"></div>
	<br>
	<h3 class="category-name"><%= brand %></h3>
	<% @products.each do |product| %>
		<% if product.brand == brand %>
		<div class="well">
        	<% if product.image.url.nil? == false %>
         		<p><%= image_tag product.image.url, size: 100 %></p>
        	<% end %>
        	

        	<h3><%= link_to product.name, product, target: "_blank" %></h3>
        	<p><%= number_to_currency product.price %></p>
      	</div>
      	<% end %>
	<% end %>
	<% end %>
</div>
</div>
</div>